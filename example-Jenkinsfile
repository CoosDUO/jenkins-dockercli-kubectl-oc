pipeline {
    tools {
        maven 'maven'
    }
    agent any
    stages {
        stage('mvn test') {
            steps {
                sh 'mvn -version'
            }
        }
        stage('docker test') {            
            steps {
                sh 'docker version'    
            }
        }
        stage('kubectl test') {
            steps {
                sh 'kubectl'
            }
        }
	      stage('oc test') {
            steps {
                sh 'oc version'
            }
        }
    }
}
